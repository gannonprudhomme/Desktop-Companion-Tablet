mixin volume-slider(id, icon)
    .slider-container(id=id + "-container")
        img.slider-icon(src="../assets/" + icon)
        label.slider-label(id=id + "-label") 00%
        div(id=id + "-slider", class="ui-slider-range ui-corner-all")

#volume-mixer(class="middle-view")
    //- Iterate through the volume sliders and add each one
    for mixer in volumeMixers
        +volume-slider(mixer.id, mixer.icon)
